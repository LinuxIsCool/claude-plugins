{
  "storage": {
    "sqlite_enabled": true,
    "markdown_enabled": true,
    "max_session_files": 100
  },
  "summarization": {
    "enabled": true,
    "max_length": 200
  },
  "hooks": {
    "SessionStart": {
      "enabled": true,
      "verbosity": "normal"
    },
    "SessionEnd": {
      "enabled": true,
      "verbosity": "normal"
    },
    "UserPromptSubmit": {
      "enabled": true,
      "verbosity": "normal"
    },
    "PreToolUse": {
      "enabled": true,
      "verbosity": "normal"
    },
    "PostToolUse": {
      "enabled": true,
      "verbosity": "normal"
    },
    "PermissionRequest": {
      "enabled": true,
      "verbosity": "normal"
    },
    "Notification": {
      "enabled": true,
      "verbosity": "minimal"
    },
    "PreCompact": {
      "enabled": true,
      "verbosity": "normal"
    },
    "Stop": {
      "enabled": true,
      "verbosity": "normal"
    },
    "SubagentStop": {
      "enabled": true,
      "verbosity": "minimal"
    }
  }
}
